<!DOCTYPE html>
<html>
  <head>
    <title>Creativelance</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <p><%= notice %></p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <p><%= alert %></p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to root_path, class: 'navbar-brand logo' do %>
        <%= image_tag('t.svg', class: 'img-fluid') %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if !user_signed_in? %>
            <li class="nav-item"><%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %></li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'My Jobs', my_jobs_index_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Edit Account', edit_user_registration_path, class: 'nav-link' %></li>

            <!-- <li class="nav-item"><%#= link_to 'Panel', panel_path(@panel), class: 'nav-link' %></li> -->
          <% end %>
          <li class="nav-item"><a href="#" class="nav-link">Pricing</a></li>
        </ul>
      </div>
    </nav>
    <% unless controller_name == 'static' %>
      <div class="section mb-5"></div>
    <% end %>

    <%= yield %>

  </body>
</html>
