<!DOCTYPE html>
<html>
  <head>
    <title>Creativelance</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
    <p class="notice"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
    <p class="alert"><%= alert %></p>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to root_path, class: 'navbar-brand logo' do %>
        <%= image_tag('t.svg', class: 'img-fluid') %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if !user_signed_in? %>
            <li class="nav-item"><%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %></li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Edit Account', edit_user_registration_path, class: 'nav-link' %></li>
            <!-- <li class="nav-item"><%#= link_to 'Panel', panel_path(@panel), class: 'nav-link' %></li> -->
          <% end %>
          <li class="nav-item"><a href="#" class="nav-link">Pricing</a></li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
