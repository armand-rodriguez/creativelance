      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control input' %>
    </div>
    <div class="field">
      <%= f.label :company %>
      <%= f.text_field :company, class: 'form-control input' %>
    </div>
    <div class="field">
      <%= f.label :company_description %>
      <%= f.text_field :company_description, class: 'form-control input' %>
    </div>
    <div class="field">
      <%= f.label :resume %>
      <%= f.text_area :resume, class: 'form-control input mb-4' %>
    </div>
    <%= f.submit 'Create this Recruiter', class: 'btn btn-primary' %>
  <% end %>
</div>
