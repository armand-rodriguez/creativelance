<div class="container">
  <div>
    <strong><%= current_user.registration_status.reg_status %></strong>
    <hr>
  </div>
  <%= form_with(model: @recruiter, local: true) do |f| %>
    <% if @recruiter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recruiter.errors.count, "error") %> prohibited this @recruiter from being saved:</h2>

      <ul>
      <% @recruiter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control input', autofocus: true  %>
